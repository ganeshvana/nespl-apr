<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="crm_form_inherit_lead" model = "ir.ui.view" >
        <field name="name">crm.lead.inherit</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref = "crm.crm_lead_view_form"/>
        <field name="arch" type="xml" >
        	<xpath expr= "//div[@name='button_box']" position ="inside">
        		<button type="object" name="need_analysis_form" class="oe_stat_button" icon="fa-check" string="Questionnaire"/>
        		<button type="object" name="action_view_survey_answer" class="oe_stat_button" icon="fa-check" string="Questionnaire Inputs"/>
        		 <button type="object" name="action_view_project_ids" class="oe_stat_button" icon="fa-puzzle-piece" string="Projects"/>
            </xpath>
            <xpath expr="//field[@name='team_id']" position="after">
                 <field name="employee_id"/>  
                 <field name="employee_pin" password="True"/>  
                 <field name="survey_id"/>  
             </xpath>
             <xpath expr="//field[@name='tag_ids']" position="after">
                 <field name="survey_id"/>  
                 <field name="roof_type" widget="many2many_tags"/>  
                 <field name="channel_partner_id"/>
             </xpath>
        </field>
    </record>
    
    <record id="survey_survey_form111" model = "ir.ui.view" >
        <field name="name">survey.survey.inherit</field>
        <field name="model">survey.user_input</field>
        <field name="inherit_id" ref = "survey.survey_user_input_view_form"/>
        <field name="arch" type="xml" >
        	<xpath expr= "//field[@name='user_input_line_ids']" position ="replace">
        		<field name="user_input_line_ids" mode="tree" attrs="{'readonly': False}">
                        <tree>
                            <field name="question_sequence" invisible="1"/>
                            <field name="question_id"/>
                            <field name="page_id" optional="hide"/>
                            <field name="answer_type" optional="hide"/>
                            <field name="skipped" optional="hide"/>
                            <field name="create_date" optional="hide"/>
                            <field name="answer_is_correct" optional="hide"/>
                            <field name="value_char_box" optional="show"/>
                            <field name="value_date" optional="show"/>
                            <field name="value_datetime" optional="show"/>
                            <field name="value_numerical_box" optional="show"/>
                            <field name="value_text_box" optional="hide"/>
                            <field name="answer_score" optional="show"/>
                            <field name="matrix_row_id" optional="hide"/>
                            <field name="suggested_answer_id" optional="hide"/>
                        </tree>
                    </field>
        	</xpath>
        </field>
    </record>
    
    <record id="crm_case_tree_view_leads1" model = "ir.ui.view" >
        <field name="name">crm.lead.tree.inherit</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref = "crm.crm_case_tree_view_leads"/>
        <field name="arch" type="xml" >
            <xpath expr="//field[@name='phone']" position="after">
                 <field name="mobile"/>  
                 <field name="employee_id"/>  
             </xpath>
        </field>
    </record>
    
    <record id="view_partner_tree1" model = "ir.ui.view" >
        <field name="name">res.partner.tree.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref = "base.view_partner_tree"/>
        <field name="arch" type="xml" >
            <xpath expr="//field[@name='phone']" position="after">
                 <field name="mobile"/>  
             </xpath>
        </field>
    </record>
    
    <record id="crm_case_tree_view_oppor1" model = "ir.ui.view" >
        <field name="name">crm.lead.tree.inherit</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref = "crm.crm_case_tree_view_oppor"/>
        <field name="arch" type="xml" >
            <xpath expr="//field[@name='phone']" position="after">
                 <field name="mobile"/> 
                 <field name="employee_id"/>   
             </xpath>
        </field>
    </record>
    
    <record id="crm_case_tree_view_oppor1" model = "ir.ui.view" >
        <field name="name">crm.lead.tree.inherit</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref = "crm.crm_case_tree_view_oppor"/>
        <field name="arch" type="xml" >
            <xpath expr="//field[@name='phone']" position="after">
                 <field name="mobile"/>  
             </xpath>
        </field>
    </record>
       
    <record id="view_inherit_partner_field" model="ir.ui.view">
         <field name="name">view.inherit.partner.field</field>
         <field name="model">res.partner</field>
         <field name="inherit_id" ref="base.view_partner_form"/>
         <field name="arch" type="xml">
             <xpath expr="//field[@name='vat']" position="after">
                 <field name="pan"/>  
             </xpath>
             <xpath expr="//field[@name='vat']" position="attributes">
                 <attribute name="string">GST Number</attribute>
             </xpath>
             <!-- <xpath expr="//field[@name='client_order_ref']" position="attributes">
                 <attribute name="string">Customer PO Reference</attribute>
             </xpath> -->
             <xpath expr="//field[@name='ref']" position="replace">
                 <field name="ref" readonly="1"/>  
             </xpath>
         </field>
     </record>        
                
</odoo>
