<?xml version="1.0" encoding="utf-8"?>
<odoo>
   <record id="purchase_tds_master_tree" model="ir.ui.view">
        <field name="name">tds.master.tree</field>
        <field name="model">tds.master</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="type" invisible="True"/>
                <field name="max_amount"/>
                <field name="tax_id"/>
            </tree>
        </field>
    </record>
    
    <record id="purchase_tds_master_act_window" model="ir.actions.act_window">
        <field name="name">Purchase TDS Configuration</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">tds.master</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="view_id" eval="False"/>
    </record>

    <menuitem name="Purchase TDS Configuration" id="purchase_tds_master_menu" action="purchase_tds_master_act_window"
                  parent="purchase.menu_purchase_config" sequence="51"/>
</odoo>
