<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record model="ir.ui.view" id="view_picking_form_inherit123">
			<field name="name">sale.template.form.delivery</field>
			<field name="model">stock.picking</field>
			<field name="inherit_id" ref="stock.view_picking_form" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='location_id']" position="after">
					<field name="project_number"/>
					<field name="material_insured1"/>
	                <field name="insurance_policy"/>
	                <field name="price_basis"/>
	                <field name="discharge"/>
	                <field name="contact_person"/>
	                <field name="contact_person_number"/>
				</xpath>
				<xpath expr= "//field[@name='origin']" position ="after">
	                <field name="reference_number"/>
	                <field name="loading"/>
	                <field name="transport"/>
	                <field name="transporter" attrs="{'invisible' : [('transport', '!=', 'truck')]}"/>
	                <field name="lr" attrs="{'invisible' : [('transport', '!=', 'truck')]}"/>
	                <field name="vehicle_type" attrs="{'invisible' : [('transport', '!=', 'truck')]}"/>
	                <field name="truck_number"/>
	                <field name="booked_by" attrs="{'invisible' : [('transport', 'not in', ['truck', 'courier'])]}"/>
	                <field name="courier" attrs="{'invisible' : [('transport', '!=', 'courier')]}"/>
	                <field name="tracking" attrs="{'invisible' : [('transport', '!=', 'courier')]}"/>	                
	            </xpath>
			</field>
		</record>
	</data>
</odoo>
