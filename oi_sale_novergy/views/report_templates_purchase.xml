<odoo>
	<data>
 <template id="purchase_report_external_layout">
            <div t-attf-class="header" t-att-style="report_header_style">
                
               
            </div>
            <div t-attf-class="article o_report_layout_standard " t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
                
                <t t-raw="0"/>
            </div>
            <div t-attf-class="footer o_standard_footer ">
                <table width="100%" style="border:none;">
                    <tr>
                        <td><center>Page: <span class="page"/> / <span class="topage"/></center></td>
                    </tr>
                </table>
            </div>
        </template>

		<template id="report_offer_letter_template">
			 <t t-call="oi_sale_novergy.purchase_report_external_layout">
                <!-- <t t-call="web.external_layout"> -->

                <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)"/>
                <div class="page">
                    <style>
		            table, th, td {
		              border: 1px solid black;
		              border-collapse: collapse;
		            }
		            th, td {
		              padding: 3px;
		            }
		            </style>

                <table style="border-style: solid;border-width:1px;" width="100%">
                   <tr style="border-style: solid;border-width:1px;border-bottom:hidden;" width="100%">
                        <td style="width:50%;text-align:center" rowspan="4">
                        	<img t-att-src="image_data_uri(doc.company_id.logo)" style="max-height: 4cm; max-width: 4cm;" align="center" />
                        </td>                        
                    </tr>   
                    <tr style="border-style: solid;border-width:1px;"><td>Head Office: 1, Navlok Navratna Complex,</td></tr>
                    <tr style="border-style: solid;border-width:1px;"><td>Bedla Road, Udaipur(Raj.)-313001 Ph: 0294-2415487/88</td></tr>
                    <tr style="border-style: solid;border-width:1px;"><td>Mail ID: purchase@novergy.net, Mobile: +91-7567525698</td></tr>
                </table>                
                <table style="border-style: solid;border-width:1px;" width="100%">
                   <tr style="border-style: solid;border-width:1px;border-bottom:hidden;" width="100%">
                        <td style="width:100%;text-align:center"><h4><strong>PURCHASE ORDER</strong></h4></td>
                    </tr>   
                </table>

				<table style="border-style: solid;border-width:1px;" width="100%">
				<tr style="border-style: solid;border-width:1px;" width="100%">
					<td style="border-style: solid;border-width:1px;" width="25%">Project No:</td>
					<td style="border-style: solid;border-width:1px;" width="50%"></td>
					<td  style="border-style: solid;border-width:1px;" width="25%">PO No-</td>
				</tr>

				<tr style="border-style: solid;border-width:1px;" width="100%">
					<td  style="border-style: solid;border-width:1px;" width="25%">Supplier Name</td>
					<td  style="border-style: solid;border-width:1px;" width="50%"><span t-field="doc.partner_id.name" /></td>
					<td  style="border-style: solid;border-width:1px;" width="25%">PO Date: <span t-esc="doc.date_approve.strftime('%d-%m-%Y')"/></td>
				</tr>
				<tr style="border-style: solid;border-width:1px;" width="100%">
					<td  style="border-style: solid;border-width:1px;" width="25%">Supplier Address: </td>
					<td  style="border-style: solid;border-width:1px;" width="50%"><span t-field="doc.partner_id.street"/>, <span t-field="doc.partner_id.street2"/> <span t-field="doc.partner_id.city"/>,<span t-field="doc.partner_id.state_id.name"/>, <span t-field="doc.partner_id.country_id.name"/> <span t-field="doc.partner_id.zip"/></td>
					<td  style="border-style: solid;border-width:1px;" width="25%" >Quote Date: </td>
				</tr>
				<tr style="border-style: solid;border-width:1px;" width="100%">
					<td  style="border-style: solid;border-width:1px;" width="25%">Contact No: </td>
					<td  style="border-style: solid;border-width:1px;" width="50%"><span t-field="doc.partner_id.street"/></td>
					<td  style="border-style: solid;border-width:1px;border-bottom:hidden;" width="25%" ></td>
				</tr>
				<tr style="border-style: solid;border-width:1px;" width="100%">
					<td  style="border-style: solid;border-width:1px;" width="25%">Email ID: </td>
					<td  style="border-style: solid;border-width:1px;" width="50%"><span t-field="doc.partner_id.email"/></td>
					<td  style="border-style: solid;border-width:1px;border-bottom:hidden;" width="25%"></td>
				</tr>
				<tr style="border-style: solid;border-width:1px;" width="100%">
					<td  style="border-style: solid;border-width:1px;" width="25%">Supplier GST No: </td>
					<td  style="border-style: solid;border-width:1px;" width="50%"><span t-field="doc.partner_id.vat"/></td>
					<td  style="border-style: solid;border-width:1px;border-bottom:hidden;" width="25%"></td>
				</tr>
				<tr style="border-style: solid;border-width:1px;" width="100%">
					<td  style="border-style: solid;border-width:1px;" width="25%">Payment Terms:</td>
					<td  style="border-style: solid;border-width:1px;" width="50%"><span t-field="doc.payment_term_id.name"/></td>
					<td  style="border-style: solid;border-width:1px;border-bottom:hidden;" width="25%"></td>
				</tr>
				<tr style="border-style: solid;border-width:1px;border-bottom:hidden;" width="100%">
					<td  style="border-style: solid;border-width:1px;" width="25%">Delivery:</td>
					<td  style="border-style: solid;border-width:1px;" width="50%"><span t-esc="doc.date_planned.strftime('%d-%m-%Y')"/></td>
					<td  style="border-style: solid;border-width:1px;border-bottom:hidden;" width="25%"></td>
				</tr>
			</table>

			<table  style="border-style: solid;border-width:1px;" width="100%">
			<tr style="solid;border-width:1px;width:100%;">
				<td  style="border-style: solid;border-width:1px;background-color:#e3e6e4;" width="40%"><strong><center>Billing Address</center></strong></td>
				<td  style="border-style: solid;border-width:1px;border-bottom:hidden;" width="10%"></td>
				<td  style="border-style: solid;border-width:1px;background-color:#e3e6e4;" width="50%"><strong><center>Shipping Address</center></strong></td>
			</tr>
			<tr style="solid;border-width:1px;width:100%;border-bottom:hidden;">
				<td  style="border-style: solid;border-width:1px;" width="40%">M/S Novergy Energy Solutions Pvt.Ltd.
				<br></br>
				<span t-field="doc.picking_type_id.warehouse_id.partner_id.street"/>, <span t-field="doc.picking_type_id.warehouse_id.partner_id.street2"/> 
				<span t-field="doc.picking_type_id.warehouse_id.partner_id.city"/>,<span t-field="doc.picking_type_id.warehouse_id.partner_id.state_id.name"/>, 
				<span t-field="doc.picking_type_id.warehouse_id.partner_id.country_id.name"/> 
				<span t-field="doc.picking_type_id.warehouse_id.partner_id.zip"/><br/>
				<strong>GST No. : <span t-field="doc.picking_type_id.warehouse_id.partner_id.vat"/></strong>
				</td>
				<td  style="border-style: solid;border-width:1px;border-bottom:hidden;" width="10%"></td>
				<td  style="border-style: solid;border-width:1px;" width="50%">M/S Novergy Energy Solutions Pvt.Ltd.
				<br></br>
				<span t-field="doc.picking_type_id.warehouse_id.partner_id.street"/>, <span t-field="doc.picking_type_id.warehouse_id.partner_id.street2"/> 
				<span t-field="doc.picking_type_id.warehouse_id.partner_id.city"/>,<span t-field="doc.picking_type_id.warehouse_id.partner_id.state_id.name"/>, 
				<span t-field="doc.picking_type_id.warehouse_id.partner_id.country_id.name"/> 
				<span t-field="doc.picking_type_id.warehouse_id.partner_id.zip"/><br/>
				<strong>GST No. : <span t-field="doc.picking_type_id.warehouse_id.partner_id.vat"/></strong>
				</td>
			</tr>
			</table>

			<table style="border-style: solid;border-width:1px;" width="100%">
				<tr style="solid;border-width:1px;width:100%;text-align:center;">
					<td  style="border-style: solid;border-width:1px;text-align:center;" width="10%"><strong>S.No</strong></td>
					<td  style="border-style: solid;border-width:1px;text-align:center;" width="40%"><strong>Items</strong></td>
					<td  style="border-style: solid;border-width:1px;text-align:center;" width="12.5%"><strong>Unit</strong></td>
					<td  style="border-style: solid;border-width:1px;text-align:center;" width="12.5%"><strong>Unit Price</strong></td>
					<td  style="border-style: solid;border-width:1px;text-align:center;" width="12.5%"><strong>Quantity</strong></td>
					<td  style="border-style: solid;border-width:1px;text-align:center;" width="12.5%"><strong>Amount</strong></td>
				</tr>
				<t t-set="i" t-value="0" />
				<t t-foreach="doc.order_line" t-as="line">
					<tr>
						<t t-set="i" t-value="i + 1" />
						<td style="border-style: solid;border-width:1px;text-align:center;">
							<span t-esc="i" />
						</td>
						<td style="border-style: solid;border-width:1px;text-align:center;">
							<span t-field="line.name" />
						</td>
						<td style="border-style: solid;border-width:1px;text-align:center;">
							<span t-field="line.product_uom.name" />
						</td>
						<td style="border-style: solid;border-width:1px;text-align:center;">
							<span t-field="line.price_unit" />
						</td>
						<td style="border-style: solid;border-width:1px;text-align:center;">
							<span t-field="line.product_qty" />
						</td>
						<td style="border-style: solid;border-width:1px;text-align:center;">
							<span t-field="line.price_subtotal" />
						</td>
					</tr>
				</t>
			</table >
			<table style="border-style: solid;border-width:1px;" width="100%">
				<tr style="border-style: solid;border-width:1px;border-bottom:hidden;" width="100%">
					<td style="border-style: solid;border-width:1px;border-bottom:">NOTE: <t t-if="doc.notes">
					<span t-field="doc.notes" />
					</t></td>
				</tr>
			</table>
			
			<table style="border-style: solid;border-width:1px;" width="100%">
				<tr style="border-style: solid;border-width:1px;" width="100%">
					<td style="border-style: solid;border-width:1px;border-bottom:hidden;" width="50%">
					</td>
					<td style="border-style: solid;border-width:1px;text-align:right;" width="37.5%">
						<strong>Amount</strong>
					</td>
					<td style="border-style: solid;border-width:1px;text-align:center;" width="12.5%">
						<strong><span t-field="doc.amount_untaxed" /></strong>
					</td>
				</tr>
				<t t-if="json.loads(doc.tax_totals_json)" t-set="tax_totals"
							t-value="json.loads(doc.tax_totals_json)" />
						<t t-foreach="tax_totals['subtotals']" t-as="subtotal">

							<t t-if="subtotal" t-set="subtotal_to_show"
								t-value="subtotal['name']" />

						</t>
						<t t-if="subtotal_to_show">
							<t
								t-foreach="tax_totals['groups_by_subtotal'][subtotal_to_show]"
								t-as="amount_by_group">
								<tr t-if="amount_by_group"
									style="border-style: solid;border-width:1px;" width="100%">
									<t t-if="len(tax_totals['groups_by_subtotal'][subtotal_to_show]) > 1">
										<td style="border-style: solid;border-width:1px;border-bottom:hidden"
											width="50%"></td>

										<td style="width:37.5%;border:1px solid black;text-align:right">
											<span t-esc="amount_by_group['tax_group_name']" />
											<span class="text-nowrap">
												on
												<t
													t-esc="amount_by_group['formatted_tax_group_base_amount']" />
											</span>
										</td>
										<td style="width:12.5%;text-align:center">
											<span class="text-nowrap"
												t-esc="amount_by_group['formatted_tax_group_amount']" />

										</td>

									</t>
									<t t-else="">
										<td style="width:50%;border-bottom:hidden;border:1px solid black;border-bottom:hidden">
										</td>
										<td style="width:37.5%;border:1px solid black;text-align:right">
											<span class="text-nowrap" t-esc="amount_by_group['tax_group_name']" />
										</td>

										<td style="width:12.5%;text-align:center">
											<span class="text-nowrap" t-esc="amount_by_group['formatted_tax_group_amount']" />
										</td>
									</t>
								</tr>
							</t>
						</t>
				<tr style="border-style: solid;border-width:1px;border-bottom:hidden;" width="100%">
					<td style="border-style: solid;border-width:1px;" width="50%">
					</td>
					<td style="border-style: solid;border-width:1px;text-align:right;" width="37.5%">
						<strong>Total Amount</strong>
					</td>
					<td style="border-style: solid;border-width:1px;text-align:center;" width="12.5%">
						<strong><span t-field="doc.amount_total" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.currency_id}"/></strong>
					</td>
				</tr>
				
			</table>
			
			<table  style="border-style: solid;border-width:1px;border-bottom:hidden;" width="100%">
			<tr style="solid;border-width:1px;width:100%;">
				<td>Amount in words(Rupees): <span t-esc="doc.currency_id.amount_to_text(doc.amount_total)" /></td>
			</tr>
			</table>

			<table  style="border-style: solid;border-width:1px;" width="100%">
				<tr style="border-style: solid;border-width:1px;">
					<td>Warranty:</td>
				</tr>
				<tr style="border-style: solid;border-width:1px;">
					<td>Packing=</td>
				</tr>
				<tr style="border-style: solid;border-width:1px;">
					<td>Inspection (prior to despatch)</td>
				</tr>
				<tr style="border-style: solid;border-width:1px;border-bottom:hidden;">
					<td>Liquiated Damages</td>
				</tr>
			</table>
			<table  style="border-style: solid;border-width:1px;" width="100%">
				<tr style="border-style: solid;border-width:1px;">
					<td style="border-style: solid;border-width:1px;">DOCUMENTS TO BE SUBMITTED by SUPPLIER
					<br/>
					1)INVOICE<br/>
					2)WARRANTY CERTIFICATE 
					</td>
					<td style="border-style: solid;border-width:1px;text-align:center;">For Novergy Energy Solutions Pvt. Ltd<br/>
					<img t-att-src="image_data_uri(doc.company_id.logo)" style="max-height: 4cm; max-width: 4cm;" align="center" /><br/>
					<span t-field="doc.user_id.name"/>
					</td>
				</tr>				
			</table>
		</div>
	</t>
		</template>
		<template id="offer_letter_report">
			<t t-call="web.html_container">
				<t t-foreach="docs" t-as="doc">
					<t t-call="oi_sale_novergy.report_offer_letter_template" t-lang="doc.partner_id.lang"/>
				</t>
			</t>
		</template>
	</data>
</odoo>
