    <record model="ir.ui.view" id="view_inherit_from_pricelist_product">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
        	<xpath expr="//page[@name='other_information']/group/group/field[@name='company_id']" position ="after">
                 <field name="bank"/>              
            </xpath>
            <xpath expr="//page/field[@name='order_line']/tree/field[@name='product_id']" position ="after">
                 <field name="pi" optional="hide"/>              
            </xpath>
        </field>
    </record>
    
    <record model="ir.ui.view" id="view_res_bank_form_product">
        <field name="name">res.bank.form</field>
        <field name="model">res.bank</field>
        <field name="inherit_id" ref="base.view_res_bank_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='bic']" position ="after">
                 <field name="micr"/>              
            </xpath>
        </field>
    </record>
    
    <record model="ir.ui.view" id="product_supplierinfo_tree_view_od">
        <field name="name">product.supplierinfo.form</field>
        <field name="model">product.supplierinfo</field>
        <field name="inherit_id" ref="product.product_supplierinfo_tree_view"/>
        <field name="arch" type="xml">
        	<xpath expr="//field[@name='name']" position ="before">
                 <field name="agreement"/>    
                 <field name="agreement_number" readonly="1"/>              
            </xpath>
            <xpath expr="//field[@name='price']" position ="before">
                 <field name="original_price"/>    
                 <field name="discount"/>              
            </xpath>
            <xpath expr="//field[@name='price']" position ="attributes">
                 <attribute name="string">Net Price</attribute>           
            </xpath>
        </field>
    </record>
    
    <record model="ir.ui.view" id="product_supplierinfo_form_view_od">
        <field name="name">product.supplierinfo.form</field>
        <field name="model">product.supplierinfo</field>
        <field name="inherit_id" ref="product.product_supplierinfo_form_view"/>
        <field name="arch" type="xml">
        	<xpath expr="//field[@name='name']" position ="before">
                 <field name="agreement"/>    
                 <field name="agreement_number" readonly="1"/>              
            </xpath>
            <xpath expr="//field[@name='price']" position ="before">
                 <field name="original_price"/>    
                 <field name="discount"/>              
            </xpath>
            <xpath expr="//field[@name='price']" position ="attributes">
                 <attribute name="string">Net Price</attribute>           
            </xpath>
        </field>
    </record>


