<odoo>
	<data>
		<record id="cancel_purchase_view_form" model="ir.ui.view">
			<field name="name">cancel.purchase.view</field>
			<field name="model">cancel.purchase</field>
			<field name="arch" type="xml">
				<form string="Reason">
					<group>
					 	<group>
					 		<field name="purchase_id" invisible="1"/>
					 		<field name="cancel_reason_id" required="1"/>
						</group> 
					</group>
					<footer>
						<button name="cancel_purchase" string="Cancel" type="object" class="oe_highlight"/>
						<button string="Cancel" class="oe_link" special="cancel" />
					</footer>
				</form>
			</field>
		</record>
		
		<record id="create_purchase_view_form" model="ir.ui.view">
			<field name="name">create.purchase.view</field>
			<field name="model">create.purchase</field>
			<field name="arch" type="xml">
				<form string="Reason">
					<group>
					 	<group>
					 		<field name="product_id"/>
						</group> 
					</group>
					<footer>
						<button name="create_purchase_order" string="Create RFQ" type="object" class="oe_highlight"/>
						<button string="Cancel" class="oe_link" special="cancel" />
					</footer>
				</form>
			</field>
		</record>
		
		<record id="action_purchase_create1" model="ir.actions.act_window">
            <field name="name">Create RFQ</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">create.purchase</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="binding_model_id" ref="base.model_res_partner" />
            <field name="binding_view_types">list</field>
        </record>
		
		
		
		
	</data>
</odoo>