<odoo>
	<data>
		<record id="cancel_purchase_view_form" model="ir.ui.view">
			<field name="name">cancel.purchase.view</field>
			<field name="model">cancel.purchase</field>
			<field name="arch" type="xml">
				<form string="Reason">
					<group>
					 	<group>
					 		<field name="purchase_id" invisible="1"/>
					 		<field name="cancel_reason_id" required="1"/>
						</group> 
					</group>
					<footer>
						<button name="cancel_purchase" string="Cancel" type="object" class="oe_highlight"/>
						<button string="Cancel" class="oe_link" special="cancel" />
					</footer>
				</form>
			</field>
		</record>
	</data>
</odoo>