        <record id="sale_order_line_tree_inherit" model="ir.ui.view">
            <field name="name">sale.order.line.tree.inherit</field>
            <field name="model">sale.order.line</field>
            <field name="inherit_id" ref="sale.view_order_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr="/tree/field[@name='qty_to_invoice']" position="after">
                    <field name="proforma_invoice"/>
                    <field name="proforma_invoiced"/>
                </xpath>
                
            </field>
        </record>

         <record id="sale_order_line_form_view" model="ir.ui.view">
            <field name="name">sale.order.line.form.view</field>
            <field name="model">sale.order.line</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="product_id"/>
                                <field name="product_uom_qty"
                                            string="Ordered Qty"
                                            context="{'partner_id':parent.partner_id, 'quantity':product_uom_qty, 'pricelist':parent.pricelist_id, 'uom':product_uom, 'company_id': parent.company_id}"
                                        />
                                <field name="qty_delivered"/>
                                <field name="qty_invoiced"/>
                                <field name="price_unit"
                                        attrs="{'readonly': [('qty_invoiced', '&gt;', 0)]}"/>
                                <field name="discount" groups="product.group_discount_per_so_line"/>

                                <field name="product_uom"
                                
                                context="{'company_id': parent.company_id}"
                                groups="uom.group_uom" options='{"no_open": True}'/>
                            </group>
                            <group>
                                <field name="tax_id" widget="many2many_tags" options="{'no_create': True}" domain="[('type_tax_use','=','sale'),('company_id','=',parent.company_id)]"
                                            attrs="{'readonly': [('qty_invoiced', '&gt;', 0)]}"/>
                                <field name="company_id" invisible="1"/>
                                <field name="product_uom_category_id" invisible="1"/>
                                <field name="analytic_tag_ids" groups="analytic.group_analytic_accounting" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                <label for="customer_lead"/>
                                <div>
                                    <field name="customer_lead" class="oe_inline"/> days
                                </div>

                            </group>
                        </group>
                        <label for="name"/>
                            <field name="name"/>
                            <div groups="base.group_no_one">
                                <label for="invoice_lines"/>
                                <field name="invoice_lines"/>
                            </div>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_order_lines" model="ir.actions.act_window">
            <field name="name">sale.order.lines</field>
            <field name="res_model">sale.order.line</field>
            <field name="view_mode">tree,form</field>
            
        </record>
 

        <record id="view_sales_order_line_check" model="ir.ui.view">
            <field name="name">sale.order.line.check</field>
            <field name="model">sale.order.line</field>
            <field name="inherit_id" ref="sale.view_sales_order_line_filter"/>
            <field name="arch" type="xml">              
                <xpath expr="/search/group/filter[@name='order']" position="after">
                    <filter string="Proforma Invoice" name="pf_inv" domain="[]" context="{'group_by':'proforma_invoice'}"/>
                    <filter string="Proforma Invoiced" name="pf_invd" domain="[]" context="{'group_by':'proforma_invoiced'}"/>

                </xpath>
                   
            </field>
        </record>



        <menuitem id="menu_sale_order_line"
            name="Sale Order Lines"
            action="action_order_lines"
            parent="sale.sale_order_menu"
            sequence="3" groups="sales_team.group_sale_salesman"/> 
        
    </data>
