    <record id="sale_order_form_inherit_form" model="ir.ui.view">
            <field name="name">sale.order.view.inherit.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="/form/header/field[@name='state']" position="replace">
                    <field name="state" widget="statusbar" statusbar_visible="draft,sent,sale,proforma_invoice"/>
                </xpath>
                <xpath expr="//form/header/button[@name='action_confirm']" position="before">
                    
                    <button name="action_send_proforma" string="Proforma Invoice" type="object" states="sale" class="btn-primary"/>
                </xpath>
                <xpath expr="//form/header/button[@name='action_quotation_send']" position="replace">
                    <button name="action_quotation_send" string="Send by Email" type="object" states="proforma_invoice"/>
                </xpath>

                <xpath expr="//form/header/button[@name='action_cancel']" position="replace">
                    <button name="action_cancel" states="draft,sent,sale,proforma_invoice" type="object" string="Cancel"/>
                </xpath>
                <!-- <xpath expr="//form/header/button[@name='action_done']" position="replace">
                    <button name="action_done" type="object" string="Lock" states="sale,proforma_invoice"
                        help="If the sale is locked, you can not modify it anymore. However, you will still be able to invoice or deliver." groups="sales_team.group_sale_manager"/>
                </xpath> -->
<!--                 <xpath expr="//form//header//button[@name='action_draft']" position="replace">-->
<!--                   <button name="action_done" type="object" string="Lock" states="sale"-->
<!--                        help="If the sale is locked, you can not modify it anymore. However, you will still be able to invoice or deliver." groups="sales_team.group_sale_manager"/>-->
<!--                    <button name="action_unlock" type="object" string="Unlock" states="done" groups="sales_team.group_sale_manager"/>-->
<!--                </xpath>-->

                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_view_lines"
                        string="Sale Order Lines"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-pencil-square-o">
                    </button>
                </xpath>
                <xpath expr="//form/sheet/notebook/page/field[@name='order_line']/tree/
                    field[@name='qty_delivered']" position="replace">
                    <field name="qty_delivered"
                            decoration-info="(not display_type and invoice_status == 'to invoice')" decoration-bf="(not display_type and invoice_status == 'to invoice')"
                            string="Delivered"
                            attrs="{
                            'column_invisible': [('parent.state', 'not in', ['sale', 'done'])],
                            'readonly': [('qty_delivered_method', '!=', 'manual')]
                            }"
                            optional="show"
                            />
                </xpath>
                <xpath expr="//form/sheet/notebook/page/field[@name='order_line']/tree/ 
                    field[@name='qty_invoiced']" position="replace">
                    <field
                        name="qty_invoiced"
                        decoration-info="(not display_type and invoice_status == 'to invoice')" decoration-bf="(not display_type and invoice_status == 'to invoice')"
                        string="Invoiced"
                        attrs="{'column_invisible': [('parent.state', 'not in', ['sale', 'done'])]}"
                        optional="show"
                        />
                </xpath>

                <xpath expr="//form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='qty_invoiced']" position="after">
                    <field name="proforma_invoice"/>
                    <field name="proforma_invoiced" readonly="1"/>
                    <button name="action_pi" string="PI" type="object"/>
                </xpath>

            </field>
        </record>

        

