<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="report_warranty_card_document">
    <t t-call="web.external_layout">
        <div class="article o_report_layout_standard"> <!--  <t t-raw="0" />  -->
            <div class="page">
                <h2 name="title" style="text-align: center;">
                    <strong>Warranty Card : </strong>
                    <t t-esc="doc.name" />
                </h2>
                <br/>
                <div >                  
                  <span t-field="doc.image" t-if="doc.image" t-options="{&quot;widget&quot;: &quot;image&quot;, &quot;style&quot;:&quot;max-width: 200px; display: inline-block;&quot;}" class="pull-right"/> 
                </div>
                <div class="row">
                    <strong class="col-xs-1 text-left"> Name: </strong>
                    <div name="address" class="col-xs-6">
                        <span t-esc="doc.partner_id.name" /> 
                    </div>
                    <div name="date" style="float: right;" class="col-xs-4"><strong> Date of purchase: </strong><t t-esc="doc.purchase_date" t-if="doc.purchase_date"/></div>                    
                </div>
                <br/>
                <br/>
                <br/>
                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th class="text-left">Warranty Start Date</th>
                            <th class="text-left">Warranty End Date</th>
                            <th class="text-left">Product</th>
                            <th class="text-left">Order Reference</th>
                        </tr>
                    </thead>
                    <tbody class="lines_tbody">
                        <tr>
                            <td class="text-left">
                                <span><t t-esc="doc.validity_from"/></span>
                            </td>
                            <td class="text-left">
                                <span><t t-esc="doc.validity_to"/></span>
                            </td>
                            <td class="text-left">
                                <span><t t-esc="doc.product_id.name"/></span>
                            </td>
                            
                            <td class="text-left">
                                <span><t t-esc="doc.sale_order_id.name" t-if="doc.sale_order_id"/></span>
                                 <span><t t-esc="doc.purchase_order_id.name" t-if="doc.purchase_order_id"/></span>
                            </td>
                        </tr>
                    </tbody>
                </table>

                <p name="note">
                    <strong>Notes : </strong><span><t t-esc="doc.notes"/></span>
                </p>
                <br></br>
                <br></br>
                <br></br>
            </div>
        </div>
    </t>
</template>

<template id="report_warrantycard">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="doc">
            <t t-call="product_warranty_cft.report_warranty_card_document" />
        </t>
    </t>
</template>
</odoo>
