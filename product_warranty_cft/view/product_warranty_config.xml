<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="sequence_of_warranty_configuration" model="ir.sequence">
            <field name="name">Warranty Config</field>
            <field name="code">WRC</field>
            <field name="padding">5</field>
            <field name="prefix">WRC_</field>
            <field name="company_id" eval="False"/>
        </record>
        <record id="sequence_of_warranty_card" model="ir.sequence">
            <field name="name">Warranty Card</field>
            <field name="code">WRT</field>
            <field name="padding">5</field>
            <field name="prefix">WRT_</field>
            <field name="company_id" eval="False"/>
        </record>
        <record id="sequence_of_warranty_claim" model="ir.sequence">
            <field name="name">Claim of Warranty</field>
            <field name="code">WRTC</field>
            <field name="padding">5</field>
            <field name="prefix">WRTC_</field>
            <field name="company_id" eval="False"/>
        </record>
    </data>

    <data>
        <record id="product_pricelist_item_form_view" model="ir.ui.view">
            <field name="name">product.warranty.config.form</field>
            <field name="model">product.warranty.config</field>
            <field name="arch" type="xml">
                <form string="Pricelist Items">
                    <sheet>
                        
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive" groups="sales_team.group_sale_manager" string="Active"  widget="boolean_button">
                                <field name="active" widget="boolean_button" options="{'terminology': 'archive'}" />
                            </button>
                        </div>
                        <h1>
                            <field name="name" readonly="1" />
                        </h1>

                        <group>
                            <group string="Applion On">
                                <field name="applied_on" widget="radio"/>
                                <field name="categ_ids" attrs="{'invisible':[('applied_on', '!=', '2_product_category')], 'required':[('applied_on', '=', '2_product_category')]}" widget="many2many_tags"/>
                                <field name="product_tmpl_ids" attrs="{'invisible':[('applied_on', '!=', '1_product')],'required':[('applied_on', '=', '1_product')]}" string="Product" widget="many2many_tags"/>
                                <field name="product_ids" attrs="{'invisible':[('applied_on', '!=', '0_product_variant')],'required':[('applied_on', '=', '0_product_variant')]}" string="Product Variant" widget="many2many_tags"/>
                            </group>
                            <group string="Configuration">
                                <label for="warranty_period" string="Warranty Period"/>
                                <div>
                                  <field name="warranty_period" class="oe_inline"/> 
                                  <field name="warranty_unit" nolabel="1" class="oe_inline"/>
                                </div>
                                <field name="warranty_sequence_id" required="1" context="{'warranty_seq':True}"/>
                                <field name="claim_sequence_id" context="{'claim_seq':True}" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="product_pricelist_view_search">
            <field name="name">product.warranty.config.search</field>
            <field name="model">product.warranty.config</field>
            <field name="arch" type="xml">
                <search string="Products Price Search">
                    <field name="name" string="Products Price"/>
                    <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                </search>
            </field>
        </record>

        <record id="product_pricelist_view_tree" model="ir.ui.view">
            <field name="name">product.warranty.config.tree</field>
            <field name="model">product.warranty.config</field>
            <field name="arch" type="xml">
                <tree string="Products Price List">
                    <field name="sequence" widget="handle" />
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="product_warranty_config_action" model="ir.actions.act_window">
            <field name="name">Warranty Configuration</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.warranty.config</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="product_pricelist_view_search" />
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to create a Warranty Configuration.
              </p>               
            </field>
        </record>

        <menuitem id="menu_product_warrnaty_config"
            name="Warranty Configuration"
            action="product_warranty_config_action"
            parent="menu_warrnty_card_cft"/>

    </data>
</odoo>
