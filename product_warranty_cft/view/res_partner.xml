<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
          <record id="act_res_partner_warranty_card" model="ir.actions.act_window">
            <field name="name">Warranty cards</field>
            <field name="res_model">warranty.card</field>
            <field name="view_mode">tree,form,graph</field>
            <field name="context">{'search_default_partner_id': active_id}</field>
        </record>

        <record id="res_partner_warranty_buttons" model="ir.ui.view">
            <field name="name">res.partner.view.buttons</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="priority" eval="20"/>
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                    <button class="oe_stat_button" type="action" name="%(product_warranty_cft.act_res_partner_warranty_card)d"
                        icon="fa-won"> 
                        <field string="Warranty cards" name="warranty_cards_count" widget="statinfo"/>
                    </button>
                </div>
                
            </field>
        </record>

    </data>
</odoo>