<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>     
            <record model="ir.ui.view" id="product_template_extended_view_extended_cft">
				<field name="name">product.template.extended</field>
				<field name="model">product.template</field>
				<field name="inherit_id" ref = "product.product_template_only_form_view"/>
				<field name="priority" eval="20"/>
				<field name="arch" type="xml">
					<div name="button_box" position="inside">
						<field name="warranty_ids" invisible="1"/>
		                <button type="object" name="action_view_warranty_lines" class="oe_stat_button"
	                    	attrs="{'invisible': [('warranty_count','=',0)]}" icon="fa-won" >
							<field name="warranty_count" widget="statinfo" string="Warranty Entries"/>
	                    </button>
            		</div>
					<!-- <xpath expr="//button[@name='toggle_active']" position="before">
						
	                    
					</xpath> -->
			    </field>
			</record>
			<record model="ir.ui.view" id="product_product_extended_view_extended_cft">
				<field name="name">product.product.extended</field>
				<field name="model">product.product</field>
				<field name="inherit_id" ref = "product.product_normal_form_view"/>
				<field name="priority" eval="20"/>
				<field name="arch" type="xml">
					<div name="button_box" position="inside">
						<field name="warranty_ids" invisible="1"/>
		                <button type="object" name="action_view_warranty_lines" class="oe_stat_button"
	                    	attrs="{'invisible': [('warranty_count','=',0)]}" icon="fa-won" >
							<field name="warranty_count" widget="statinfo" string="Warranty Entries"/>
	                    </button>
            		</div>
					
			    </field>
			</record>
	       

	</data>
</odoo>