<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="invoice_form_sale_order_term" model="ir.ui.view">
            <field name="name">sale.order.form.term.invoice</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//page[@name='other_information']" position="after">
                        <page string="Terms and Conditions">
                            <group>
                                <field name="template_id"/>
                                <field name="print_term"/>
                            </group>
                            <field name="sale_term"/>
                        </page>
                    </xpath>
                </data>
            </field>
        </record>
        
        <record id="invoice_form_purchase_order_term" model="ir.ui.view">
            <field name="name">purchase.order.form.term.invoice</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//page[@name='purchase_delivery_invoice']" position="after">
                        <page string="Terms and Conditions">
                            <group>
                                <field name="template_id"/>
                                <field name="print_term"/>
                            </group>
                            <field name="purchase_term"/>
                        </page>
                    </xpath>
                </data>
            </field>
        </record>
        
        <record id="invoice_form_pricelist_term" model="ir.ui.view">
            <field name="name">product.pricelist.form.term.invoice</field>
            <field name="model">product.pricelist</field>
            <field name="inherit_id" ref="product.product_pricelist_view"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//page[@name='pricelist_config']" position="after">
                        <page string="Terms and Conditions">
                            <group>
                                <field name="template_id"/>
                                <field name="print_term"/>
                            </group>
                            <field name="pricelist_term"/>
                        </page>
                    </xpath>
                </data>
            </field>
        </record>
    
        <record id="account_letter_template_form" model="ir.ui.view">
            <field name="name">sale.letter.template.form</field>
            <field name="model">sale.letter.template</field>
            <field name="arch" type="xml">
                <form string="Invoice Term">
                    <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <div class="oe_title" name="title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Subject of the letter"/>
                        </h1>
                    </div>
                    <group>
                            <field name="template" nolabel="1"/>
                    </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="sale_letter_template_tree" model="ir.ui.view">
            <field name="name">sale.letter.template.tree</field>
            <field name="model">sale.letter.template</field>
            <field name="arch" type="xml">
                <tree string="Sale Term">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="sale_letter_template_formats" model="ir.actions.act_window">
            <field name="name">Terms &amp; Conditions</field>
            <field name="res_model">sale.letter.template</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_action_sale_term_form"  parent="purchase.menu_purchase_config" action="sale_letter_template_formats"
            sequence="2"/>
</odoo>