<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="purchase.portal_my_home_menu_purchase" name="Portal layout : purchase menu entries" inherit_id="portal.portal_breadcrumbs" priority="25">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li t-if="page_name == 'purchase_rfq' or purchase_order and purchase_order.state == 'sent'" t-attf-class="breadcrumb-item #{'active ' if not purchase_order else ''}">
                <a t-if="purchase_order" t-attf-href="/my/purchase_rfq?{{ keep_query() }}">Purchase RFQ</a>
                <t t-else="">Purchase RFQ</t>
            </li>
        </xpath>  
    </template>

    <template id="portal_my_home_purchase_rfq" name="Show Purchase RFQ" inherit_id="portal.portal_my_home" priority="25">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-if="purchase_rfq_count">
                <t t-call="portal.portal_docs_entry">
                    <t t-set="title">Purchase RFQ</t>
                    <t t-set="url" t-value="'/my/purchase_rfq'"/>
                    <t t-set="count" t-value="purchase_rfq_count"/>
                </t>
            </t>        
        </xpath>
    </template>

    <template id="portal_my_purchase_rfq" name="My Purchase RFQ">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>
            <t t-call="portal.portal_searchbar">
                <t t-set="title">RFQ</t>
            </t>
            <t t-if="not purchase_rfq">
                <p>There are currently no rfq for your account.</p>
            </t>
            <t t-if="purchase_rfq" t-call="portal.portal_table">
                <thead>
                    <tr class="active">
                        <th>Purchase RFQ #</th>                        
                        <th class="text-center">State</th>
                        <th class="text-center">Status</th>
                        <th class="text-right">Order Date</th>
                        <th class="text-right">Total</th>
                    </tr>
                </thead>
                <t t-foreach="purchase_rfq" t-as="rfq">
                    <tr>
                        <td>
                            <a t-att-href="rfq.get_portal_url()"><t t-esc="rfq.name"/></a>
                        </td>
                        
                        <td class="text-center">
                            <t t-if="rfq.state == 'sent'">
                                <span class="badge badge-pill badge-primary"><i class="fa fa-fw fa-file"/>New</span> 
                            </t>
                        </td>

                        <td class="text-center">
                            <t t-if="rfq.is_rfq_submitted == True">
                                <span class="badge badge-pill badge-secondary"><i class="fa fa-fw fa-check"/>RFQ Submitted</span>
                            </t>
                            <t t-else="">
                                <span class="badge badge-pill badge-primary"><i class="fa fa-fw fa-file"/>New</span>
                            </t>
                        </td>

                        <td class="text-right">
                            <span t-field="rfq.date_order"/>
                        </td>

                        <td class="text-right">
                            <span t-field="rfq.amount_total" t-options='{"widget": "monetary", "display_currency": rfq.currency_id}'/>
                        </td>
                        
                    </tr>
                </t>
            </t>
        </t>
    </template>

    <template id="purchase_order_portal_template" name="Purchase Order Portal Template" inherit_id="portal.portal_sidebar" primary="True">
        <xpath expr="//div[hasclass('o_portal_sidebar')]" position="inside">            
            <t t-set="o_portal_fullwidth_alert" groups="purchase.group_purchase_user">
                <t t-call="portal.portal_back_in_edit_mode">
                    <t t-set="backend_url" t-value="'/web#model=%s&amp;id=%s&amp;action=%s&amp;view_type=form' % (purchase_order._name, purchase_order.id, action.id)"/>
                </t>
            </t>
            <div class="row mt16 o_portal_purchase_sidebar">
                <!-- Sidebar -->
                <t t-call="portal.portal_record_sidebar">
                    <t t-set="classes" t-value="'col-lg-auto d-print-none'"/>
                    <t t-set="title">
                        <h2 class="mb-0"><b t-field="purchase_order.amount_total" data-id="total_amount"/> </h2>
                    </t>

                    <t t-set="entries">
                        <ul class="list-group list-group-flush flex-wrap flex-row flex-lg-column">
                            <li class="list-group-item flex-grow-1">                                
                                <div class="o_download_pdf btn-toolbar flex-sm-nowrap">
                                    <div class="btn-group flex-grow-1 mr-1 mb-1">
                                        <a class="btn btn-secondary btn-block o_download_btn" t-att-href="purchase_order.get_portal_url(report_type='pdf', download=True)" title="Download"><i class="fa fa-download"/> Download</a>
                                    </div>
                                    <div class="btn-group flex-grow-1 mb-1">
                                        <a class="btn btn-secondary btn-block o_print_btn o_portal_rfq_print" t-att-href="purchase_order.get_portal_url(report_type='pdf')" id="print_rfq_report" title="Print" target="_blank"><i class="fa fa-print"/> Print</a>
                                    </div>
                                </div>
                            </li>                            
                            <li t-if="purchase_order.user_id" class="list-group-item flex-grow-1">
                                <div class="small mb-1"><strong class="text-muted">Purchase Representative</strong></div>
                                <div class="row flex-nowrap">
                                    <div class="col flex-grow-0 pr-2">
                                        <img class="rounded-circle mr4 float-left o_portal_contact_img" t-if="purchase_order.user_id.image_1024" t-att-src="image_data_uri(purchase_order.user_id.image_1024)" alt="Contact"/>
                                        <img class="rounded-circle mr4 float-left o_portal_contact_img" t-if="not purchase_order.user_id.image_1024" src="/web/static/src/img/placeholder.png" alt="Contact"/>
                                    </div>
                                    <div class="col pl-0" style="min-width: 150px">
                                        <span t-field="purchase_order.user_id" t-options='{"widget": "contact", "fields": ["name", "phone"], "no_marker": True}'/>
                                        <a href="#discussion" class="small"><i class="fa fa-comment"></i> Send message</a>
                                    </div>
                                </div>
                            </li>
                            <li class="list-group-item flex-grow-1">
                                <t t-if="purchase_order.has_to_be_signed(True)">
                                    <a role="button" class="btn btn-primary btn-block mb8" data-toggle="modal" data-target="#modalaccept" href="#">
                                        <i class="fa fa-check"/>Sign &amp; Send
                                    </a>
                                </t>
                            </li>
                        </ul>
                    </t>
                </t>

                <!-- Page content -->
                <div id="purchase_content" class="col-12 col-lg justify-content-end">

                    <!-- status messages -->
                    <div t-if="message == 'cant_reject' and purchase_order.has_to_be_signed()" class="alert alert-danger alert-dismissable d-print-none" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">&amp;times;</button>
                        Your order is not in a state where it can be rejected.
                    </div>
                    <div t-if="purchase_order.state == 'cancel'" class="alert alert-danger alert-dismissable d-print-none" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="close">&amp;times;</button>
                        <strong>This order has been canceled.</strong>
                    </div>
                    <div t-if="message == 'sign_ok'" class="alert alert-success alert-dismissable d-print-none" role="status">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">&amp;times;</button>
                        <strong>Thank You!</strong><br/>
                        <t t-if="message == 'sign_ok' and purchase_order.state == 'purchase'">The status of your order has been confirmed.</t>                        
                        <t t-else="">Your request for a quote has been received.</t>
                    </div>

                    <!-- main content -->
                    <div t-attf-class="card #{'pb-5' if report_type == 'html' else ''}">
                        <div t-call="rfq_vendor_portal.purchase_rfq_portal_content"/>
                    </div>

                    <!-- bottom actions -->
                    <div t-if="purchase_order.has_to_be_signed(True)" class="row justify-content-center text-center d-print-none pt-1 pb-4">
                        <t t-if="purchase_order.has_to_be_signed(True)">                            
                            <div class="col-sm-auto mt8">
                                <a role="button" class="btn btn-secondary" href="#discussion"><i class="fa fa-comment"/> Feedback</a>
                            </div>
                            <div class="col-sm-auto mt8">
                                <a role="button" class="btn btn-primary" data-toggle="modal" data-target="#modalaccept" href="#"><i class="fa fa-check"/>Sign &amp; Send</a>
                            </div>
                            <div class="col-sm-auto mt8">
                                <a role="button" class="btn btn-danger" data-toggle="modal" data-target="#modaldecline" href="#"> <i class="fa fa-times"/> Reject</a>
                            </div>
                        </t>                        
                    </div>

                    <!-- chatter -->
                    <div id="purchase_order_communication" class="mt-4">
                        <h2>RFQ History</h2>
                        <t t-call="portal.message_thread">
                            <t t-set="object" t-value="purchase_order"/>
                        </t>
                    </div>
                    
                    <!-- modal relative to the actions sign and pay -->
                    <div role="dialog" class="modal fade" id="modalaccept">
                        <div class="modal-dialog" t-if="purchase_order.has_to_be_signed(True)">
                            <form id="accept" method="POST" t-att-data-order-id="purchase_order.id" t-att-data-token="purchase_order.access_token" class="js_accept_json modal-content js_website_submit_form">
                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                <header class="modal-header">
                                    <h4 class="modal-title">Validate Order</h4>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">&amp;times;</button>
                                </header>
                                <main class="modal-body" id="sign-dialog">
                                    <p>
                                        <span>I agree to the following terms by signing this proposal:</span>
                                        <ul>
                                            <li><span>On the behalf of:</span> <b t-field="purchase_order.partner_id.commercial_partner_id"/></li>
                                            <li><span>For an amount of:</span> <b data-id="total_amount" t-field="purchase_order.amount_total"/></li>                                            
                                        </ul>
                                    </p>
                                    <t t-call="portal.signature_form">
                                        <t t-set="call_url" t-value="purchase_order.get_portal_url(suffix='/accept')"/>
                                        <t t-set="default_name" t-value="purchase_order.partner_id.name"/>
                                    </t>
                                </main>
                            </form>
                        </div>
                    </div>

                    <!-- modal relative to the action reject -->
                    <div role="dialog" class="modal fade" id="modaldecline">
                        <div class="modal-dialog">
                            <form id="decline" method="POST" t-attf-action="/my/purchase/#{purchase_order.id}/decline?access_token=#{purchase_order.access_token}" class="modal-content">
                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                <header class="modal-header">
                                    <h4 class="modal-title">Reject This RFQ</h4>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">&amp;times;</button>
                                </header>
                                <main class="modal-body">
                                    <p>
                                        Please explain why you are rejecting this quote; this will assist us in improving our services.
                                    </p>
                                    <textarea rows="4" name="decline_message" required="" placeholder="Your feedback..." class="form-control" />
                                </main>
                                <footer class="modal-footer">
                                    <button type="submit" t-att-id="purchase_order.id" class="btn btn-danger"><i class="fa fa-times"></i> Reject</button>
                                    <button type="button" class="btn btn-primary" data-dismiss="modal">Cancel</button>
                                </footer>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </xpath>
    </template>

    <template id="purchase_rfq_portal_content_totals_table">
        <table class="table table-sm">            
            <tr class="border-black" style="border-bottom:1px solid #dddddd;">
                <td><strong>Subtotal</strong></td>
                <td class="text-right">
                    <span data-id="total_untaxed" t-field="purchase_order.amount_untaxed" t-options='{"widget": "monetary","display_currency": purchase_order.company_id.currency_id}'/>
                </td>
            </tr>
            <t t-if="purchase_order.state not in ('draft','sent')">
                <tr class="border-black" style="border-bottom:1px solid #dddddd;">
                    <td><strong>Taxes</strong></td>
                    <td class="text-right">
                        <span data-id="total_tax" t-field="purchase_order.amount_tax" t-options='{"widget": "monetary","display_currency": purchase_order.company_id.currency_id}'/>
                    </td>
                </tr>        
            </t>
            <tr class="border-black" style="border-bottom:1px solid #dddddd;">
                <td><strong>Total</strong></td>
                <td class="text-right">
                    <span  data-id="total_amount"  t-field="purchase_order.amount_total" t-options='{"widget": "monetary", "display_currency": purchase_order.company_id.currency_id}'/>
                </td>
            </tr>            
        </table>
    </template>

    <template id="purchase_rfq_portal_content" name="Purchase RFQ Portal Content">
        <!-- Intro -->
        <div id="introduction" t-attf-class="pb-2 pt-3 #{'card-header bg-white' if report_type == 'html' else ''}">
            <h2 class="my-0">
            <t t-esc="purchase_order.name"/>
            </h2>   
        </div>
        <div t-attf-class="#{'card-body' if report_type == 'html' else ''}">
            <!-- Informations -->
            <div id="informations">
                <div class="row" id="so_date">
                    <div class="mb-3 col-6">
                      <t t-if="purchase_order.date_order">
                        <strong>Order Date:</strong> 
                      </t>
                      <span t-field="purchase_order.date_order" t-options='{"widget": "date"}'/>
                    </div>
                    <div class="col-lg-6">
                        <strong t-if="purchase_order.payment_term_id" class="d-block mb-1">Payment Terms:</strong>
                        <span t-field="purchase_order.payment_term_id"/>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <strong t-if="purchase_order.partner_id" class="d-block mb-1">Vendor Address:</strong>                        
                        <address t-field="purchase_order.partner_id" t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'/>
                    </div>   
                    <div class="col-lg-6">
                        <strong t-if="purchase_order.partner_ref" class="d-block mb-1">Vendor Reference:</strong>
                        <span t-field="purchase_order.partner_ref"/>
                    </div>                                  
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <strong t-if="purchase_order.date_order" class="d-block mb-1">Vendor Reference:</strong>
                        <span t-field="purchase_order.date_order"/>
                    </div> 
                </div>
            </div>
            
            <section id="details" style="page-break-inside: auto;" class="mt16">
                <h3 id="details">Pricing</h3>
                <table class="table table-sm" id="purchase_rfq_table">
                    <thead class="bg-100">
                        <tr>
                            <th class="text-left">Products</th>
                            <th class="text-left">Description</th>
                            <th class="text-right">Quantity</th>
                            <th t-attf-class="text-right {{ 'd-none d-sm-table-cell' if report_type == 'html' else '' }}">Unit Price</th>                            
                            <t t-if="purchase_order.state not in ('draft','sent')">
                                <th t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                    <span>Taxes</span>
                                </th>
                            </t>
                            <th class="text-right">Subtotal</th>                            
                            <th class="text-right">Amount</th>
                            
                        </tr>
                    </thead>                    
                    <tbody class="purchase_tbody">
                        <t t-set="rfq_current_subtotal" t-value="0"/>
                        <t t-foreach="purchase_order.order_line" t-as="line">
                            <t t-set="rfq_current_subtotal" t-value="rfq_current_subtotal + line.price_total"/>
                            <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                <t t-if="not line.display_type">
                                    <td id="product_name"><span t-field="line.product_id.name"/></td>
                                    <td id="product_name"><span t-field="line.name"/></td>
                                    <td class="text-right">
                                        <div id="quote_qty">
                                            <span t-field="line.product_uom_qty"/>
                                            <span t-field="line.product_uom"/>
                                        </div>
                                    </td>
                                    <t t-if="purchase_order.state in ('draft','sent') and purchase_order.signed_on == False">
                                        <td t-attf-class="text-right {{ 'd-none d-sm-table-cell' if report_type == 'html' else '' }}">
                                            <div class="input-group js_quantity_container adjust_amount pull-right">
                                                <div class="input-group-prepend d-print-none">
                                                    <span class="input-group-text d-none d-md-inline-block">
                                                        <a t-att-href="purchase_order.get_portal_url(suffix='/update_rfq_line/%s' % line.id, query_string='&amp;remove=True')" class="js_line_update_json" aria-label="Remove one" title="Remove one">
                                                            <span class="fa fa-minus"/>
                                                        </a>
                                                    </span>
                                                </div>                                            
                                                <input type="text" pattern="[0-9]+([\.,][0-9]+)?" class="js_unit_price form-control" t-att-data-id="line.id" 
                                                    t-att-value="str(line.price_unit)"/>
                                                <div class="input-group-append d-print-none">
                                                    <span class="input-group-text d-none d-md-inline-block">
                                                        <a t-att-href="purchase_order.get_portal_url(suffix='/update_rfq_line/%s' % line.id)" class="js_line_update_json" aria-label="Add one" title="Add one">
                                                            <span class="fa fa-plus"/>
                                                        </a>
                                                    </span>
                                                </div>
                                            </div>
                                        </td>
                                    </t>
                                    <t t-if="purchase_order.state not in ('draft','sent')">
                                        <td t-attf-class="text-right {{ 'd-none d-sm-table-cell' if report_type == 'html' else '' }}">
                                            <span t-field="line.price_unit"/>
                                        </td>
                                    </t>
                                    <t t-if="purchase_order.state not in ('draft','sent')">                                  
                                        <td t-attf-class="text-right {{'d-none d-md-table-cell' if report_type == 'html' else '' }}">
                                            <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.taxes_id))"/>
                                        </td>
                                    </t>
                                    <td class="text-right">
                                        <span class="oe_order_line_price_subtotal" t-field="line.price_subtotal"/>                                        
                                    </td>
                                    <td class="text-right">
                                        <span class="oe_order_line_price_total" t-field="line.price_total"/>
                                    </td>                                    
                                </t> 
                                <t t-if="line.display_type == 'line_section'">
                                    <td colspan="99">
                                        <span t-field="line.name"/>
                                    </td>
                                    <t t-set="current_section" t-value="line"/>
                                    <t t-set="rfq_current_subtotal" t-value="0"/>                                                                
                                </t>
                                <t t-if="line.display_type == 'line_note'">
                                    <td colspan="99">
                                        <span t-field="line.name"/>
                                    </td>
                                </t>                                    
                            </tr>
                            <t t-if="current_section and (line_last or purchase_order.order_line[line_index+1].display_type == 'line_section')
                                and purchase_order.state not in ('draft','sent')">
                                <tr class="is-subtotal text-right">
                                    <td colspan="99">
                                        <strong class="mr16">Subtotal</strong>
                                        <span
                                            t-esc="rfq_current_subtotal"
                                            t-options='{"widget": "monetary", "display_currency": purchase_order.company_id.currency_id}'
                                        />
                                    </td>
                                </tr>
                            </t>
                        </t>
                    </tbody>
                </table>

                <div id="total" class="row" name="total" style="page-break-inside: avoid;">
                    <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto">                        
                        <table class="table table-sm">                            
                            <tr class="border-black" style="border-bottom:1px solid #dddddd;">
                                <td><strong>Subtotal</strong></td>
                                <td class="text-right">
                                    <span data-id="total_untaxed" t-field="purchase_order.amount_untaxed" t-options='{"widget": "monetary","display_currency": purchase_order.company_id.currency_id}'/>
                                </td>
                            </tr>
                            <t t-if="purchase_order.state not in ('draft','sent')">                          
                                <tr class="border-black" style="border-bottom:1px solid #dddddd;">
                                    <td><strong>Taxes</strong></td>
                                    <td class="text-right">
                                        <span data-id="total_tax" t-field="purchase_order.amount_tax" t-options='{"widget": "monetary","display_currency": purchase_order.company_id.currency_id}'/>
                                    </td>
                                </tr>  
                            </t>
                            <tr class="border-black" style="border-bottom:1px solid #dddddd;">
                                <td><strong>Total</strong></td>
                                <td class="text-right">
                                    <span  data-id="total_amount"  t-field="purchase_order.amount_total"  t-options='{"widget": "monetary", "display_currency": purchase_order.company_id.currency_id}'/>
                                </td>
                            </tr>                           
                        </table>
                    </div>
                </div>
            </section>
            <section t-if="purchase_order.notes" id="notes" name="notes">
                 <div class="row mt-4" name="notes">
                    <div class="col-12">
                        <h3>Notes</h3>
                        <p t-field="purchase_order.notes"/>
                    </div>
                 </div>
            </section>     
            <section t-if="purchase_order.signature" id="signature" name="Signature">
                <div class="row mt-4" name="signature">
                    <div t-attf-class="#{'col-3' if report_type != 'html' else 'col-sm-7 col-md-4'} ml-auto text-center">
                        <h5>Signature</h5>
                        <img t-att-src="image_data_uri(purchase_order.signature)" style="max-height: 6rem; max-width: 100%;"/>
                        <p t-field="purchase_order.signed_by"/>
                    </div>
                </div>
            </section>
        </div>
    </template>
</odoo>