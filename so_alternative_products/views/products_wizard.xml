<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="products_alternatives_wizard" model="ir.ui.view">
		<field name="name">products_alternatives_wizard</field>
		<field name="model">products.wizard</field>
		<field name="arch" type="xml">
			<form>
				<group>
					<field name="alternatives_id" domain="[('id','in', product_ids)]"
						options="{'no_create': True,'no_quick_create': True,'no_open': True, 'no_create_edit': True}" />
					<field name="product_ids" invisible="0"
						options="{'no_create': True,'no_quick_create': True,'no_open': True, 'no_create_edit': True}" />

				</group>
				<footer>
					<button name="replace" string="Replace" type="object" class="btn-primary" />
					<button string="Cancel" class="btn-default" special="cancel" />
				</footer>
			</form>
		</field>
	</record>

	<record id="action_products_alternatives" model="ir.actions.act_window">
		<field name="name">Alternatives</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">products.wizard</field>
		<field name="view_mode">form</field>
		<field name="target">new</field>
	</record>

</odoo>